<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/scroll"
android:layout_width="fill_parent"
android:layout_height="wrap_content">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/label1"
    tools:context="countries.countries.MainActivity"
    android:minHeight="560dp"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/countryImageView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE"
        android:id="@+id/countryName"
        android:layout_gravity="center_horizontal"
        android:textSize="50dp"
        android:layout_below="@+id/knowItButton"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR"
        android:id="@+id/countryCapitalName"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/countryName"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODE!"
        android:id="@+id/countryContinent"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/countryCapitalName"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textColor="#ff0000" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="NORMAL"
        android:id="@+id/normalButton"
        android:background="#99f6f0"
        android:layout_below="@+id/countryContinent"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="EUROPEAN"
        android:id="@+id/europeanButton"
        android:background="#99f6f0"
        android:layout_alignTop="@+id/africanButton"
        android:layout_alignLeft="@+id/northAmericanButton"
        android:layout_alignStart="@+id/northAmericanButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="ASIAN"
        android:id="@+id/asianButton"
        android:background="#99f6f0"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/africanButton"
        android:layout_alignLeft="@+id/africanButton"
        android:layout_alignStart="@+id/africanButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="AFRICAN"
        android:id="@+id/africanButton"
        android:background="#99f6f0"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/normalButton"
        android:layout_alignRight="@+id/knowItButton"
        android:layout_alignEnd="@+id/knowItButton"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="NORTH AMERICAN"
        android:id="@+id/northAmericanButton"
        android:background="#99f6f0"
        android:layout_alignTop="@+id/souhtAmericanButton"
        android:layout_toRightOf="@+id/countryImageView"
        android:layout_toEndOf="@+id/countryImageView"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="SOUTH AMERICAN"
        android:id="@+id/souhtAmericanButton"
        android:background="#99f6f0"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/asianButton"
        android:layout_alignLeft="@+id/asianButton"
        android:layout_alignStart="@+id/asianButton" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OCEANIAN"
        android:id="@+id/oceanianButton"
        android:background="#99f6f0"
        android:layout_alignTop="@+id/asianButton"
        android:layout_alignLeft="@+id/europeanButton"
        android:layout_alignStart="@+id/europeanButton" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="&lt;-BACK"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="10dp"
        android:background="#2df400" />

    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="KNOW IT"
        android:id="@+id/knowItButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/countryImageView"
        android:layout_alignEnd="@+id/countryImageView"
        android:textSize="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#0040ff" />

</RelativeLayout>
</ScrollView>